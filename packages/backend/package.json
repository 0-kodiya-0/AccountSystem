{
  "name": "@accountsystem/backend-server",
  "version": "1.0.0",
  "description": "AccountSystem authentication microservice - A secure, production-ready backend server for user authentication with OAuth, local auth, 2FA, and real-time notifications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "accountsystem-backend": "dist/cli.js",
    "abs": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cli && npm run build:server",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/cli.js --packages=external",
    "build:server": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --packages=external",
    "dev:build": "npm run build --watch",
    "dev:nodemon": "nodemon",
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', { recursive: true });\"",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "start": "node dist/cli.js",
    "link": "npm run build && npm link"
  },
  "files": [
    "dist/**/*",
    "docs/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0-kodiya-0/AccountSystem.git",
    "directory": "packages/backend"
  },
  "keywords": [
    "authentication",
    "microservice",
    "oauth",
    "jwt",
    "express",
    "backend",
    "server",
    "2fa",
    "security",
    "mongodb",
    "google-auth",
    "local-auth",
    "notifications",
    "typescript",
    "rest-api",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/0-kodiya-0/AccountSystem/issues"
  },
  "homepage": "https://github.com/0-kodiya-0/AccountSystem/tree/main/packages/backend#readme",
  "author": "0-kodiya-0",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lowdb": "^1.0.15",
    "@types/mongoose": "^5.11.96",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^7.0.3",
    "esbuild": "0.25.5",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "googleapis": "^146.0.0",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^7.0.1",
    "lru-cache": "^11.0.2",
    "mongoose": "^8.12.1",
    "nodemailer": "^7.0.3",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1"
  }
}
